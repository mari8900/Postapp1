<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgSpinner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logopostaromana"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/RomaniaBlue"
                android:padding="4dp"
                android:fontFamily="@font/fredokamedium"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imgSpinner"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Oficiul Postal 70"/>

            <TextView
                android:id="@+id/textAddressSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/fredokamedium"
                android:textColor="@color/RomaniaBlue"
                android:padding="4dp"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/imgSpinner"
                app:layout_constraintTop_toBottomOf="@id/textSpinner"
                tools:text="Adresa1 Bucuresti"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>